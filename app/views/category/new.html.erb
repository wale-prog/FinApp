  <%= form_with model: Category, url: user_category_index_path(current_user.id), data: { turbo: false } do |f| %>
    <div class="field form-group " >
      <%= f.text_field :name, class:"form-control", autofocus: true, placeholder: "Category name", value: '' %><br/>
