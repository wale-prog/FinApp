<div class="container">
  <%= form_with model: Category, url: user_category_index_path(current_user.id), data: { turbo: false } do |f| %>
    <div class="field form-group " >
      <%= f.text_field :name, class:"form-control", autofocus: true, placeholder: "Category name", value: '' %><br/>
    </div>

    <div class="field form-group " >
      <%= f.text_field :icon, class:"form-control", placeholder: "Category Icon" %><br/>
    </div>

    <div class="actions">
      <%= f.submit "Add Category", class: 'btn btn-secondary' %>
    </div>  
  <% end %>
</div>
