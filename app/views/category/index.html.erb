
<div class="container">
<% if @categories.empty? %>
  <p>Category lists is empty, please add a new category to begin.</p>
<% else %>
  <% @categories.each do |category| %>
    <%= link_to user_category_path(current_user, category.id) do %>
      <div class="card mb-4">
        <div class="card-body d-flex mx-4" style="align-items:center;justify-content:space-between"> 
          <img class="icon-img"src="<%= category.icon %>" alt="<%= category.name%> image">
          <h5 class="card-title m-0"> <%= category.name.capitalize %> </h5>
          <h5class="card-body"> $<%= category.expenses.sum(:amount) %> </h5>
        </div>
        <p class="card-text"><%= category.created_at.strftime('%a %d %b %Y')%> </p>
      </div>
    <% end %>
  <% end %>
</div>
<% end %>
<div class="category-div">
  <%= link_to 'Add new Category', new_user_category_path(current_user), class:"btn new-category" %>
</div>


