<% @categories.each do |category| %>
  <div class="card mb-4">
    <div class="card-body d-flex mx-4" style="align-items:center;justify-content:space-between"> 
      <img class="icon-img"src="<%= category.icon %>" alt="<%= category.name%> image">
      <%= link_to category.name, user_category_path(current_user, category.id), class: "card-title" %>
    </div>
    <p class="card-text"><%= category.created_at.to_date %></p>
  </div>
<% end %>

<%= link_to 'Add new Category', new_user_category_path(current_user), class:"btn btn-link" %>